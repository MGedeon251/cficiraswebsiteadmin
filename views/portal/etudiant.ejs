<%-include('../includes/header')%>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin">
            <div class="d-flex justify-content-between flex-wrap">
                <div class="d-flex align-items-end flex-wrap">
                <div class="me-md-3 me-xl-5">
                    <h2>Gestion des Etudiants</h2>
                    <p class="mb-md-5">Gestions des etudiants du portail etudiant</p>
                </div>
                </div>
                <div class="d-flex justify-content-between align-items-end flex-wrap">
                <button type="button" class="btn btn-light bg-white btn-icon me-3 d-none d-md-block ">
                    <i class="mdi mdi-download text-muted"></i>
                </button>
                <button type="button" class="btn btn-light bg-white btn-icon me-3 mt-2 mt-xl-0">
                    <i class="mdi mdi-clock-outline text-muted"></i>
                </button>
                <button type="button" class="btn btn-light bg-white btn-icon me-3 mt-2 mt-xl-0" data-toggle="modal" data-target="#exampleModalCenter">
                    <i class="mdi mdi-plus text-muted"></i>
                </button>
            </div>
            </div>
        </div>
        
        <div class="row"> 
          <div class="col-12 grid-margin">
            <%- include('../includes/partials_message') %>
            <form action="/addEtudiant" method="post">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">AJOUTER UN ETUDIANT</h4>
                    <form class="form-sample">
                      <p class="card-description">
                        Informations Personnel
                      </p>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Noms</label>
                            <div class="col-sm-9">
                              <input type="text" class="form-control" name="et_nom" />
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Prenoms</label>
                            <div class="col-sm-9">
                              <input type="text" class="form-control" name="et_prenom" />
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Sexe</label>
                            <div class="col-sm-9">
                              <select class="form-control">
                                <option value="homme">Homme</option>
                                <option value="femme">Femme</option>
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Date de naissance</label>
                            <div class="col-sm-9">
                              <input class="form-control" placeholder="dd/mm/yyyy"/ name="et_datenais">
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Classe</label>
                            <div class="col-lg-10">
                              <select class="form-control" name="classe">
                                
                                <option value="10">LAP 1 A</option>
                                <option value="11">LAP 1 B</option>
                                <option value="12">LAP 2 A</option>
                                <option value="13">LAP 2 B</option>
                                <option value="14">LAP 3 </option>
                                <option value="15">DUT IG 1</option>
                                <option value="16">DUT IG 2</option>
                                <option value="1">LIC INFO 1 A</option>
                                <option value="2">LIC INFO 1 B</option>
                                <option value="3">LIC INFO 1 C</option>
                                <option value="4">LIC INFO 2 A</option>
                                <option value="5">LIC INFO 2 B</option>
                                <option value="6">LIC INFO 3 GL</option>
                                <option value="8">LIC INFO 3 SR</option>
                                
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Telephone </label>
                            <div class="col-sm-9">
                              <input type="text" class="form-control" name="et_tel" />
                            </div>
                          </div>
                        </div>
                      </div>
                      <p class="card-description">
                        Creation Compte
                      </p>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Matricule</label>
                            <div class="col-sm-9">
                              <input type="text" class="form-control" name="et_matricule" />
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">e-mail</label>
                            <div class="col-sm-9">
                              <input type="text" class="form-control" 
                              placeholder="users@exemple.com"
                              name="et_mail"/>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Mot de passe</label>
                            <div class="col-sm-9">
                              <input type="password" class="form-control" 
                              name="password"/>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Confirmation </label>
                            <div class="col-sm-9">
                              <input type="password" class="form-control" placeholder="Confirmer le mot de passe" />
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <button type="submit" class="btn btn-primary btn-lg btn-block">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i>
                            Valider</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </form>
              </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Etudiants ajout√© recement</h4>
                <p class="card-description">
                  
                </p>
                <div class="table-responsive pt-3">
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th>
                          #
                        </th>
                        <th>
                          Nom
                        </th>
                        <th>
                          Prenoms
                        </th>
                        <th>
                          Matricule
                        </th>
                        <th>
                          Telephone
                        </th>
                        <th>
                          Classe
                        </th>
                        <th>
                          Actions
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <% var i= 0; %>
                        <% data.forEach(row => { %>
                          <td><%=++i;  %></td>
                          <td><%=row.Nom%> </td>
                          <td><%=row.Prenom%></td>
                          <td><%=row.matricule%></td>
                          <td><%=row.Tel%></td>
                          <td><%=row.clas_abrev%></td></td>
                          <td>
                          <button type="button" class="btn btn-inverse-warning btn-fw btn-sm btn-block">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i>                                                    
                          </button>
                          <button type="button" class="btn btn-inverse-danger btn-fw btn-sm btn-block">
                            <i class="mdi mdi-alert btn-icon-prepend"></i>                                                    
                          </button>
                        </td>
                      </tr> 
                      <% })%>   
                      </tr>
                      
                    </tbody>
                  </table>
                </div>

              </div>
            </div>
          </div>
        </div>
<%-include('../includes/footer')%>